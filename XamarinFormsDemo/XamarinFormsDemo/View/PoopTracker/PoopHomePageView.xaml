<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinFormsDemo.View.PoopTracker.PoopHomePageView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Poop Tracker!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Add new Poop!" 
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    x:Name="newPoopButton"
                    Clicked="newPoopButton_Clicked"/>
            <Button Text="See History" 
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    x:Name="SeeHistoryButton"
                    Clicked="SeeHistoryButton_Clicked"/>
            <Button Text="Go to Statistics"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    x:Name="StatisticsButton"
                    Clicked="StatisticsButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>